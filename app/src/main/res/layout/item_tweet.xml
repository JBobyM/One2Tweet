<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#B0C4DE">

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_marginRight="5dp"
        tools:srcCompat="@tools:sample/avatars"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_alignTop="@id/ivProfileImage"
        android:layout_toRightOf="@id/ivProfileImage"
        android:text="JBobyM" />

    <ImageView
        android:id="@+id/ivComment"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignLeft="@id/tvBody"
        android:src="@drawable/comment"
        android:layout_below="@id/tvBody"/>
    <TextView
        android:id="@+id/tvComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="112"
        android:layout_alignBottom="@id/ivComment"
        android:layout_toRightOf="@id/ivComment"
        android:layout_marginLeft="7dp"
        />

    <ImageView
        android:id="@+id/ivRetweet"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/tvBody"
        android:src="@drawable/retweet"
        android:layout_marginLeft="180dp"/>
    <TextView
        android:id="@+id/tvRetweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="112"
        android:layout_toRightOf="@id/ivRetweet"
        android:layout_alignBottom="@id/ivRetweet"
        android:layout_marginLeft="7dp"/>



    <ImageView
        android:id="@+id/ivLike"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_below="@id/tvBody"
        android:layout_marginLeft="255dp"
        android:src="@drawable/like"
        />
    <TextView
        android:id="@+id/tvLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ivLike"
        android:text="112"
        android:layout_toRightOf="@id/ivLike"
        android:layout_marginLeft="7dp"/>


    <ImageView
        android:id="@+id/ivShare"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/tvBody"
        android:layout_marginLeft="330dp"
        android:src="@drawable/share"/>


    <TextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvScreenName"
        android:textSize="17dp"
        android:layout_marginBottom="40dp"
        android:layout_toRightOf="@id/ivProfileImage"
        android:textStyle="italic"
        android:autoLink="all"
        android:text="This is a tweet." />

    <TableRow
        android:id="@+id/hr"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignTop="@id/ivProfileImage"
        android:background="#00BFFF" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ivProfileImage"
        android:layout_alignParentRight="true"
        android:text="Timestamp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tvBody"
        android:layout_marginRight="5dp"
        />

    <TextView
        android:id="@+id/tvScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvName"
        android:layout_alignLeft="@id/tvName"
        android:layout_marginBottom="10dp"
        android:maxLines="10"
        android:text="ScreenName" />


</RelativeLayout>